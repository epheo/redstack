#cloud-config
ssh_pwauth: True
users:
  - name: stack
    sudo: ALL=(ALL) NOPASSWD:ALL
    ssh_authorized_keys: {{ guests_pubkey }}
chpasswd:
  list: |
    stack:{{ guests_passwd }}
  expire: False
runcmd:
  - sed -i'.orig' -e's/without-password/yes/' /etc/ssh/sshd_config
  - systemctl restart sshd
rh_subscription:
  activation-key: {{ subscription.activation_key }}
  org: {{ subscription.org }}
  auto-attach: True